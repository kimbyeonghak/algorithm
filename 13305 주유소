#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    long long distance[n - 1];
    long long price[n];

    for (int i = 0; i < n - 1; i++) {
        scanf("%lld", &distance[i]);
    }

    for (int i = 0; i < n; i++) {
        scanf("%lld", &price[i]);
    }

    long long total = 0;
    long long min_price = price[0];

    for (int i = 0; i < n - 1; i++) {
        if (price[i] < min_price) {
            min_price = price[i];
        }
        total += min_price * distance[i];
    }

    printf("%lld\n", total);

    return 0;
}

================================
n = int(input())                      # 도시 개수
distance = list(map(int, input().split()))  # 각 도시간 거리 (n-1개)
price = list(map(int, input().split()))     # 각 도시 기름값 (n개)

total = 0
min_price = price[0]   # 첫 도시의 기름값을 시작 기준으로

for i in range(n - 1):  # 마지막 도시는 주유할 필요 없음
    if price[i] < min_price:   # 더 싼 주유소를 만나면 교체!
        min_price = price[i]
    total += min_price * distance[i]

print(total)

